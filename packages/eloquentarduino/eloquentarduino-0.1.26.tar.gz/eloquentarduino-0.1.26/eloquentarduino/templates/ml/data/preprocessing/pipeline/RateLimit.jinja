{% extends './templates/Step.jinja' %}

{% block public %}

    /**
     *
     */
    bool transform(float *source) {
        counter += 1;

        if (counter == {{ skip + 1 }}) {
            counter = 0;

            return true;
        }

        return false;
    }

    /**
     * Reset step state
     */
    void reset() {
        counter = 0;
    }

{% endblock %}

{% block protected %}
    uint16_t counter = 0;

{% endblock %}