#!/usr/bin/env python3
# pylint: disable=E1101,C0116,E0611

# This file is placed in the Public Domain.


"bot command"


import sys


from genocide.obj import Wd
from genocide.hdl import Client, Cfg, docmd, parse, scan


from genocide import bsc, fnd, irc, log, mdl, rss


Cfg.name = "genocide"
Wd.workdir = "/var/lib/genocide/"


scan(bsc)
scan(fnd)
scan(irc)
scan(log)
scan(mdl)
scan(rss)


class CLI(Client):

    def raw(self, txt):
        print(txt)


def main():
    parse(" ".join(sys.argv[1:]))
    cli = CLI()
    docmd(cli, Cfg.otxt)


main()
